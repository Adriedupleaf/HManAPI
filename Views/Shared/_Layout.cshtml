<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar fixed-top navbar-expand-sm navbar-light bg-light">
        <div class="container">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link" })
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-item nav-link" })
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-item nav-link" })
                    <a href="#">Switch Theme</a>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <script type="text/javascript">
            function showImage() {
                document.getElementById('MyImage').style.display = 'block';
                setTimeout(hideImage, 15000);
            }
            function hideImage() {
                document.getElementById('MyImage').style.display = 'none';
            }
            setTimeout(showImage, 10000);
        </script>
       <asp:Image ID="MyImage" runat="server" ImageUrl="~/Images/mascot.gif" Style="display:none" />
        <div Image MyImage>
        <img src="~/Images/mascot.gif" alt="i" />
        </div>

        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
